generator client {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Movie {
 //   id           String   @id @default(auto()) @map("_id") @db.ObjectId
    id              String @id @map("_id") @db.ObjectId
    filmtv_id      Int
    original_title String
    release_year   Int
    genre          String
    duration_min   Int
    avg_vote       Float
    critics_vote   Float
    public_vote    Float
    description    String?
    notes          String?
    directors      String[]
    countries      String[]
    actors         String[]
    created_at     DateTime @default(now())
    updated_at     DateTime @updatedAt
}
